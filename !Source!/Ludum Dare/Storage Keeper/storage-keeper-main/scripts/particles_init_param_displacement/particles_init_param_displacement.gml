function particles_init_param_displacement(displacement_min_x, displacement_max_x, displacement_min_y, displacement_max_y) {
    particles_displacement_min_x = displacement_min_x;
    particles_displacement_max_x = displacement_max_x;
    particles_displacement_min_y = displacement_min_y;
    particles_displacement_max_y = displacement_max_y;
}